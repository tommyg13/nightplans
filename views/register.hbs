{{> error}}
<h1 align="center">Create your <br> account</h1>
<div id="signup" class="container text-center">
    
    <form action="/register" method="post" id="regContact_form">
    <input type="hidden", name="_csrf", id="csrf" value="{{csrfToken}}">  
        <div class="form-group form-inline">
            <input type="text" class="form-control" name="username" placeholder="Username" required >
            <input type="text" class="form-control" name="email" placeholder="Email" required>
        </div>
        <div class="form-group form-inline">
            <input type="password" class="form-control" name="password" placeholder="Password" required>
            <input type="password" class="form-control" name="password2" placeholder="Password confirmation" required>
        </div>        

        <button type="submit" id="register" class="btn btn-warning">Sign up</button>
    </form>
  </div>